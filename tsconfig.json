{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "paths": {
      "@ramp/frontend/*": ["./packages/frontend/src/*"],
      "@ramp/utils/types/*": ["./packages/utils/types/*"],
      "@ramp/utils/mocks/*": ["./packages/utils/mocks/*"],
      "@ramp/utils/utils/*": ["./packages/utils/utils/*"],
      "@components/*": ["./packages/frontend/src/components/*"],
      "@images/*": ["./packages/frontend/src/assets/images/*"],
      "@icons/*": ["./packages/frontend/src/assets/icons/*"],
      "@styles": ["./packages/frontend/src/styles/index.scss"],
      "@context/*": ["./packages/frontend/src/context/*"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
